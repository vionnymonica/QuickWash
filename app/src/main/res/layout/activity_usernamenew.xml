<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newusername.usernamenew">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/backgrounutama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="99dp"
        android:text="PASSWORD BARU"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:text="ISI DETAIL,BUAT AKUNMU SEKARANG!"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Masukkan Sandi Baru"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>
        <EditText
            android:id="@+id/edittext1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="8dp"
            android:textColor="@color/abu"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:hint="Enter your Password"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Konfirmasi Sandi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>
        <EditText
            android:id="@+id/edittext2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="8dp"
            android:textColor="@color/abu"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:hint="Enter your Password"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Lanjut"
            android:textSize="22sp"
            android:textStyle="bold"
            style="@android:style/Widget.Button"
            android:textColor="@color/white"
            android:background="@drawable/background_btn"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:paddingStart="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="95dp">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butuh bantuan?"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klik disini"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>